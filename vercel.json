{
  "builds": [
    { 
      "src": "api/index.php", 
      "use": "vercel-php@0.8.0",
      "config": {
        "includeFiles": "../src/**/*.php"
      }
    },
    { "src": "admin.php", "use": "vercel-php@0.8.0" },
    { "src": "blog.php", "use": "vercel-php@0.8.0" },
    { "src": "index.php", "use": "vercel-php@0.8.0" },
    { "src": "webstories.php", "use": "vercel-php@0.8.0" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*\\.css)", "dest": "/$1" },
    { "src": "/(.*\\.js)", "dest": "/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/admin.php", "dest": "/admin.php" },
    { "src": "/blog.php", "dest": "/blog.php" },
    { "src": "/webstories.php", "dest": "/webstories.php" },
    { "src": "/admin", "dest": "/admin.php" },
    { "src": "/blog", "dest": "/blog.php" },
    { "src": "/webstories", "dest": "/webstories.php" },
    { "src": "/web-stories/(.*)", "dest": "/webstories.php" },
    { "src": "/api/(.*)", "dest": "/api/index.php" },
    { "src": "/(.*)", "dest": "/index.php" }
  ]
}
